@{
    ViewData["Title"] = "Login Page";
}

<div class="container">
    <div class="text-center">
        <label style="color: black;">Email</label>
    </div>
    <div class="input-group mb-2 mt-3">
        <input class="form-control" type="email" id="email-input"
               aria-label="Recipient's username"  aria-describedby="basic-addon1" name="email">
    </div>

    <div class="text-center">
        <label style="color: black;">Password</label>
    </div>
    <div class="input-group mb-2 mt-3">
        <input class="form-control" type="password" id="password-input"
               aria-label="Recipient's username" aria-describedby="basic-addon1" name="password">
    </div>

    <div class="text-center">
        <button id="login-btn" class="btn btn-primary w-100 h-100">Login</button>
    </div>

    <div class="text-center">
        <button id="sign-up-btn" class="btn btn-primary mt-2 w-100 h-100">Sign up</button>
    </div>

    <label>https://localhost:7080/swagger/index.html use this to add the admin account
        via the post user endpoint since by defualt a users role is set to guest.</label>

    <div id="snackbar-email">Email Invalid!</div>
    <div id="snackbar-email-taken">Email already taken!</div>
    <div id="snackbar-created">Account Created!</div>
    <div id="snackbar-null">Please enter your details in the fields above!</div>
    <div id="snackbar-logged-in">Logged In</div>
</div>
