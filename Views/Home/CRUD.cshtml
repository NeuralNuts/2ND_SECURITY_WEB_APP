@{
    ViewData["Title"] = "CRUD Page";
}

<div class="container">
    <div id="true-table" class="mh-100"
         style="width: 100%; border: solid; border-color: rgba(143, 143, 143, 0.2); border-width: 2px; border-radius: 5px; height: 475px; overflow: auto;">
        <table class="table table-hover table-striped" id="table-id">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Security Plan</th>
                    <th scope="col">Subscription Type</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>

            <tbody id="my-table">
            </tbody>
        </table>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create new product</h5>
                </div>
                <form id="basic-form-products" action="" method="post">
                    <div class="modal-body">
                        <label>Security plan</label>
                        <input type="text" class="form-control mb-2" id="security-plan-input" placeholder="Enter a security paln..."
                               aria-label="Recipient's username" aria-describedby="basic-addon1" />

                        <label>Subscription plan</label>
                        <input type="text" class="form-control mb-2" id="subscription-plan-input" placeholder="Enter a subscription plan..."
                               aria-label="Recipient's username" aria-describedby="basic-addon1" />

                        <label>Price</label>
                        <input type="text" class="form-control" id="price-input" placeholder="Enter a price..."
                               aria-label="Recipient's username" aria-describedby="basic-addon1" />
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="input-group-append">
        <button class="btn btn-primary w-100 mt-2" id="modal-btn" type="button" data-bs-toggle="modal" data-bs-target="#myModal">Add Products</button>
    </div>

    <label style="color: black;">Password</label>
    <input class="form-control mt-2" aria-label="Recipient's username" aria-describedby="basic-addon1">
</div>
