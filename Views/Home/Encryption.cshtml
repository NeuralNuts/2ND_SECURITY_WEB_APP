@{
    ViewData["Title"] = "Encryption Page";
}

<div class="container">
    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="ImageUpload">
        <input class="form-control" type="file" name="file" />
        <br />
        <button class="btn btn-primary w-100 mt-2 mb-2" type="submit" value="Uplaod">Upload</button>
    </form>
    <form method="post" asp-action="DownloadFile">
        <input class="form-control" type="text" placeholder="filename.png" aria-label="Recipient's username" 
            aria-describedby="basic-addon1" name="fileName">
        <br />
        <button class="btn btn-primary w-100 " type="submit">Download</button>
    </form>
</div>